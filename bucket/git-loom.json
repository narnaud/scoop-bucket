    "architecture": {
        "64bit": {
            "url": "https://github.com/narnaud/git-loom/releases/download/v0.9.0/git-loom-x86_64-pc-windows-msvc.zip",
            "hash": "06996850c6e79f793fd361a2f9c911891b58e5fbdc6a92482c816699a7f5f1a7"
        }
    },
    "bin": "git-loom.exe",
    "installer": {
        "script": [
            "$luapath = Join-Path (Split-Path -Path \"$dir\" -Parent) \"current\\clink\"",
            "if (Get-Command clink -ErrorAction SilentlyContinue) {",
            "   clink installscripts \"$luapath\"",
            "} else {",
            "   warn 'Clink installation not found. Please manually install these scripts.'",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "$luapath = Join-Path (Split-Path -Path \"$dir\" -Parent) \"current\\clink\"",
            "if (Get-Command clink -ErrorAction SilentlyContinue) {",
            "   clink uninstallscripts \"$luapath\"",
            "}"
        ]
    },
    "checkver": "github",
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/narnaud/git-loom/releases/download/v$version/git-loom-x86_64-pc-windows-msvc.zip"
            }
        }
    }
}
